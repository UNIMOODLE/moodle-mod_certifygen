{{!
    @template mod_certifygen/my_certificates_validator

    my_certificates_validator

    Classes required for JS:
    * None

    Data attibutes required for JS:
    * None

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}
<div data-region="certificate-validator">
    <table  class="table">
        <thead>
            <tr>
                <th scope="col"> {{#str}} code, mod_certifygen{{/str}} </th>
                <th scope="col"> {{#str}} status, mod_certifygen{{/str}} </th>
                <th scope="col"> {{#str}} language {{/str}} </th>
                <th scope="col"> </th>
            </tr>
        </thead>
        <tbody>
            {{#list}}
                <tr data-id="{{id}}">
                    <td>{{code}}</td>
                    <td>{{status}}</td>
                    <td>{{langstring}}</td>
                    <td class="certifygen-actions">
                        {{#canemit}}
                            <span class="btn btn-primary" data-id="{{id}}" data-action="emit-certificate"
                                  data-modelid="{{modelid}}" data-courseid="{{courseid}}" data-userid="{{userid}}"
                                  data-langstring="{{langstring}}" data-lang="{{lang}}" data-cmid="{{cmid}}">
                                    {{#str}} emit, mod_certifygen{{/str}}
                            </span>
                        {{/canemit}}
                        {{#candownload}}
                            {{#downloadurl}}
                                <a target="_blank" class="btn btn-primary" href="{{downloadurl}}">{{#str}} download, mod_certifygen{{/str}}</a>
                            {{/downloadurl}}
                            {{^downloadurl}}
                                <span class="btn btn-primary" data-id="{{id}}" data-action="download-certificate"
                                      data-modelid="{{modelid}}" data-courseid="{{courseid}}" data-userid="{{userid}}"
                                      data-langstring="{{langstring}}" data-lang="{{lang}}">
                                    {{#str}} download, mod_certifygen{{/str}}
                                </span>
                            {{/downloadurl}}
                        {{/candownload}}
                    </td>
                </tr>
            {{/list}}
        </tbody>
    </table>
</div>
{{#js}}
    require(['mod_certifygen/certificatemanager'], (module) => module.init('[data-region="certificate-validator"]'));
{{/js}}
<style>
    .certifygen-actions .btn {
        &:hover {
            cursor: pointer;
        }
    }
</style>